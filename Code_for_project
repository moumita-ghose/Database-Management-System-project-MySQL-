create table vesseles (
    id int not null primary key auto_increment,
    name varchar(250),
    type enum('Containers','Oil tanker','Chemical tanker','LPG container',
                'pilot boat','General cargo ship'
             ),
     capacity varchar(250),
     flag_state varchar(250),
     owner_id int,
     foreign key( owner_id ) references owners(id)      
);

