create table owners
(
    id int not null primary key auto_increment,
    first_name varchar(250),
    middle_name varchar(250),
    last_name varchar(250),
    present_country varchar(250),
    present_address varchar(250),
    permanante_address varchar(250),
    email varchar(250),
    contact varchar(25),
);

