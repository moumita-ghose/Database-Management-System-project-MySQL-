create table crew (
    id int not null primary key auto_increment,
    first_name varchar(250),
    last_name varchar(250),
    ranks enum('captain','Cheif officer','Second officer','Deck cadet',
                'Able Seaman','Ordinary seaman','Deck Cadet'),
    nationality varchar(250),
    date_of_Birth date,
    vessel_id int ,
    contact varchar(25),
    salary decimal(10,2),
    email varchar(250),
    foreign key(vessel_id) REFERENCES vessels(id)
);


